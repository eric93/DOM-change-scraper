{
  "manifest_version": 2,

  "name": "DOM-change-scraper",
  "description": "This extension collects changes to the DOM for any web page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["collector.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "tabs", "<all_urls>"
  ]
}
